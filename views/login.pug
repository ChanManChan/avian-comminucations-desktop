extends layouts/auth-layout.pug

block content
  .loginContainer
    h1 Login
    form(method="post") 
      p.errorMessage #{errorMessage}
      input(type="text", name="logIdentifier", placeholder="Username or email", value=logIdentifier required="")
      input(type="password", name="logPassword", placeholder="Password", required="")
      input(type="submit", value="Login")
    a(href="/register") Need an account? Register here.